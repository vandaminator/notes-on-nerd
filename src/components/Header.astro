---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
import MainDrawer from "./MainDrawer";
import ThemeToggle from "./ThemeToggle";
---

<header id="header">
  <nav>
    <h2>
      <img src="/fav.svg" alt="icon" width="36" />
      <a href="/">{SITE_TITLE}</a>
    </h2>
    <div class="internal-links max-lg:hidden">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/subjects">Subjects</HeaderLink>
      <HeaderLink href="/blog">Blog</HeaderLink>
      <HeaderLink href="/about">About</HeaderLink>
    </div>
    <MainDrawer client:load/>
    <div class="max-lg:hidden fixed bottom-4 right-4">
      <ThemeToggle client:load/>
    </div>
  </nav>
</header>
<style>
  :root {
    --head-colour: #ededf7;
    --head-box: 0px 11px 50px 0px #dbdbf0;
  }
  
  header {
    margin-bottom: 24px;
    padding: 0 1em;
    background-color: var(--head-colour);
    box-shadow: var(--head-box);
  } 
  
  header:is(.dark *) {
    --head-colour: #140f20;
    --head-box: 0px 0px 50px 0px #2e2e6b;
  }
  
  h2 {
    margin: 0;
    font-size: 1em;
    display: flex;
    gap: 2;
    align-items: center;
  }

  h2 a,
  h2 a.active {
    text-decoration: none;
  }
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  nav a {
    padding: 1em 0.5em;
    color: var(--black);
    border-bottom: 4px solid transparent;
    text-decoration: none;
  }
  nav a.active {
    text-decoration: none;
    border-bottom-color: var(--accent);
  }
</style>
